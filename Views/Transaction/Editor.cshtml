@model MoneySenseWeb.Models.Transaction

@{
    ViewData["PageTitle"] = Model.TransactionId == 0 ? "Nova Movimentação" : "Editar Movimentação";
}

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5 style="background-color:#212b36">
            <form asp-action="Editor">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <ejs-datepicker id="Date" ejs-for="Date" placeholder="Data" floatLabelType="Always" format="dd-MMM-yyyy"></ejs-datepicker>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <ejs-dropdownlist id="ddlCategory" ejs-for="CategoryId" dataSource="@ViewBag.Categorys" placeholder="Categoria"
                    floatLabelType="Always" allowFiltering="true" ignoreAccent="true" filterType="Contains" popupHeight="220px">
                <e-dropdownlist-fields value="CategoryId" text="TitleWithIcon"></e-dropdownlist-fields></ejs-dropdownlist>
                </div>
                <div class="mb-3">
                    <ejs-numerictextbox id="Amount" ejs-for="Amount" floatLabelType="Always" placeholder="Quantidade" min=0 format="c0"></ejs-numerictextbox>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="Description" placeholder="Descrição" ejs-for="Description" floatLabelType="Always" multiline="true"></ejs-textbox>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <ejs-button id="submit" type="submit" content="Salvar" cssClass="e-success"></ejs-button>
            </form>
        </div>
    </div>
    <div class  ="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-money-bill-transfer fa-2xl"></i>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

